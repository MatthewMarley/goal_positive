<!-- form_for using a blank profile model (we defined this in the profiles_controller)
     because of the instance variable we know we need first_name, last_name, and contact_email
     the rest are autogenerated -->
<%= form_for @profile, url: user_profile_path do |f| %>

    <%= hidden_field_tag 'user', params[:user] %>

    <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <%= f.label :contact_email %>
        <%= f.text_field :contact_email, class: 'form-control' %>
    </div>
    
    <!-- This will lead to the create action, so we need to complete that in the contacts_controller under def create -->
    <%= f.submit "Submit", class: 'btn btn-success' %>
    
<% end %>